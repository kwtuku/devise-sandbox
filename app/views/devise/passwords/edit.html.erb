<div class="hero py-10">
  <div class="hero-content w-full">
    <div class="basis-5/12 self-start">
      <h1 class="text-2xl font-bold"><%= t('.change_your_password') %></h1>
    </div>
    <div class="basis-7/12">
      <div class="max-w-sm mx-auto">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-control w-full">
            <%= f.label :password, "#{t('.new_password')}#{t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length}", class: 'label' %>
            <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'input input-bordered w-full' %>
          </div>

          <div class="form-control w-full">
            <%= f.label :password_confirmation, t('.confirm_new_password'), class: 'label' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input input-bordered w-full' %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
