<% provide(:title, 'ユーザー一覧') %>

<div class="overflow-x-auto">
  <table class="table table-zebra w-full">
    <thead>
      <tr>
        <th class="normal-case">ID</th>
        <th class="normal-case">Email</th>
        <th class="normal-case">confirmed_at</th>
        <th class="normal-case">confirmation_sent_at</th>
        <th class="normal-case">unconfirmed_email</th>
        <th class="normal-case">confirmed?</th>
        <th class="normal-case">Provider</th>
        <th class="normal-case">UID</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= partially_hidden_email(user.email) %></td>
          <td><%= l(user.confirmed_at) if user.confirmed_at %></td>
          <td><%= l(user.confirmation_sent_at) if user.confirmation_sent_at %></td>
          <td><%= partially_hidden_email(user.unconfirmed_email) if user.unconfirmed_email %></td>
          <td><%= user.confirmed? %></td>
          <td><%= user.provider %></td>
          <td><%= partially_hidden_string(user.uid) if user.uid %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
